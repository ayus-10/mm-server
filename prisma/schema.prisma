generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  fullName String
}

model FriendRequest {
  id Int @id @default(autoincrement())
  sender Int
  receiver Int
  sentDate DateTime
  status RequestStatus
}

enum RequestStatus {
  ACCEPTED
  REJECTED
  PENDING
}
